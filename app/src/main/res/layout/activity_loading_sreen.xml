<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingSreen"
    android:background="@drawable/background_color">

    <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:loader_animDur="1000"
        app:loader_circleRadius="5dp"
        app:loader_defaultColor="@color/purple"
        app:loader_dotsDist="3dp"
        app:loader_expandOnSelect="true"
        app:loader_firstShadowColor="@color/purple"
        app:loader_isSingleDir="true"
        app:loader_noOfDots="5"
        app:loader_secondShadowColor="@color/purple"
        app:loader_selectedColor="@color/violet"
        app:loader_selectedRadius="10dp"
        app:loader_showRunningShadow="true" />

</androidx.constraintlayout.widget.ConstraintLayout>